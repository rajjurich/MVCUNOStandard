                                <form class="form-horizontal" role="form">

                                    <div class="row ">
                                        <div class="col-md-6 ">
                                            <fieldset>
                                                <legend>Company</legend>
                                                <div class="form-group row">
                                                    <div class="col-sm-6">
                                                        @Html.HiddenFor(model => model.DELETEDBY, new { Value = @HttpContext.Current.Session["User"].ToString() })
                                                        @Html.HiddenFor(model => model.CATEGORY_ID)
                                                        @Html.LabelFor(model => model.COMPANY_ID, new { @class = "control-label" })
                                                        @Html.DropDownListFor(model => model.COMPANY_ID, (IEnumerable<SelectListItem>)ViewBag.Companies, "Select", new { @class = "form-control" })
                                                        @Html.ValidationMessageFor(model => model.COMPANY_ID, "", new { @class = "text-danger" })
                                                    </div>
                                                </div>

                                            </fieldset>
                                        </div>
                                        <div class="col-md-6">
                                            <fieldset>
                                                <legend>Category </legend>
                                                <div class="form-group row">
                                                    <div class="col-sm-6">
                                                        @Html.LabelFor(model => model.ORG_CATEGORY_ID, new { @class = "control-label" })
                                                        @Html.DropDownListFor(model => model.ORG_CATEGORY_ID, (IEnumerable<SelectListItem>)ViewBag.Categories, "Select", new { @class = "form-control" })
                                                        @Html.ValidationMessageFor(model => model.ORG_CATEGORY_ID, "", new { @class = "text-danger" })
                                                    </div>
                                                </div>

                                            </fieldset>
                                        </div>
                                        <div class="col-md-6">
                                            <fieldset>
                                                <legend>Grace Timing</legend>
                                                <div class="form-group row">
                                                    <div class="col-sm-6">
                                                        @Html.LabelFor(model => model.EARLY_GOING, new { @class = "control-label" })
                                                        @Html.EditorFor(model => model.EARLY_GOING, new { @class = "form-control", Placeholder = "EARLY GOING" })
                                                        @Html.ValidationMessageFor(model => model.EARLY_GOING, "", new { @class = "text-danger" })
                                                    </div>
                                                    <div class="col-sm-6">
                                                        @Html.LabelFor(model => model.LATE_COMING, new { @class = "control-label" })
                                                        @Html.EditorFor(model => model.LATE_COMING, new { @class = "form-control", Placeholder = "LATE COMING" })
                                                        @Html.ValidationMessageFor(model => model.LATE_COMING, "", new { @class = "text-danger" })
                                                    </div>
                                                </div>
                                            </fieldset>
                                        </div>
                                        <div class="col-md-6">
                                            <fieldset>
                                                <legend>
                                                    <label class="checkbox-inline pt0">
                                                        @Html.CheckBoxFor(model => model.EXTRA_CHECK)
