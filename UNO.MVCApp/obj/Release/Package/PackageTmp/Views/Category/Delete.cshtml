                                                        @Html.ValidationMessageFor(model => model.EXTRA_CHECK, "", new { @class = "text-danger" })
                                                    </label>
                                                </legend>
                                                <div class="form-group row">
                                                    <div class="col-sm-6">
                                                        @Html.LabelFor(model => model.EXHRS_BEFORE_SHIFT_HRS, new { @class = "control-label" })
