                                                        @Html.ValidationMessageFor(model => model.EXHRS_BEFORE_SHIFT_HRS, "", new { @class = "text-danger" })
                                                    </div>
                                                    <div class="col-sm-6">
                                                        @Html.LabelFor(model => model.EXHRS_AFTER_SHIFT_HRS, new { @class = "control-label" })
                                                        @Html.EditorFor(model => model.EXHRS_AFTER_SHIFT_HRS, new { @class = "form-control", Placeholder = "LATE COMING" })
                                                        @Html.ValidationMessageFor(model => model.EXHRS_AFTER_SHIFT_HRS, "", new { @class = "text-danger" })
                                                    </div>
                                                </div>
                                            </fieldset>
                                        </div>
                                        <div class="col-md-6">
                                            <fieldset>
                                                <legend>@Html.LabelFor(model => model.COMPENSATORYOFF_CODE, new { @class = "control-label" })</legend>
                                                <div class="form-group row">
                                                    <div class="col-sm-6">
                                                        @Html.TextBoxFor(model => model.COMPENSATORYOFF_CODE, new { @class = "form-control", Placeholder = "Compensatory Off", @readonly = true })
                                                        @Html.ValidationMessageFor(model => model.COMPENSATORYOFF_CODE, "", new { @class = "text-danger" })
                                                    </div>
                                                    <div class="col-sm-6">
                                                        <label class="checkbox-inline ">
                                                            <input type="checkbox" id="chkWeekEnd" value="option1"> Weekend
                                                        </label>
                                                        <label class="checkbox-inline ">
                                                            <input type="checkbox" id="chkWeekOff" value="option1"> Weekoff
                                                        </label>
                                                        <div class="clearfix"></div>
                                                        <label class="checkbox-inline ">
                                                            <input type="checkbox" id="chkHoliday" value="option1"> Holiday &nbsp;&nbsp;
                                                        </label>
                                                        <label class="checkbox-inline ">
                                                            <input type="checkbox" id="chkWeekDay" value="option1"> WeekDay
                                                        </label>
                                                    </div>
                                                </div>
                                            </fieldset>
                                        </div>
                                        <div class="col-md-6">
                                            <fieldset>
                                                <legend>Deduct From Extra Hours</legend>
                                                <div class="form-group row">

                                                    <div class="col-sm-6">
                                                        <label class="checkbox-inline ">
                                                            @Html.CheckBoxFor(model => model.DED_FROM_EXHRS_EARLY_GOING)
                                                            @Html.LabelFor(model => model.DED_FROM_EXHRS_EARLY_GOING, new { @class = "control-label" })
                                                            @Html.ValidationMessageFor(model => model.DED_FROM_EXHRS_EARLY_GOING, "", new { @class = "text-danger" })
                                                        </label>
                                                        <div class="clearfix"></div>
                                                        <label class="checkbox-inline ">
                                                            @Html.CheckBoxFor(model => model.DED_FROM_EXHRS_LATE_COMING)
                                                            @Html.LabelFor(model => model.DED_FROM_EXHRS_LATE_COMING, new { @class = "control-label" })
                                                            @Html.ValidationMessageFor(model => model.DED_FROM_EXHRS_LATE_COMING, "", new { @class = "text-danger" })
                                                        </label>
                                                    </div>
                                                </div>
                                            </fieldset>
                                        </div>
                                    </div>

                                </form>

                            </div>
                            <div class="form-actions">
                                <div class="row">
                                    <div class="col-md-12 text-center">
                                        <button type="submit" class="btn btn-danger">
                                            <i class="fa fa-trash"></i> Delete
                                        </button>

                                    </div>
                                </div>


                            </div>
                        </div>

                    </div>
                </div>
            </div>
            <!-- Spacer Ends -->
        </div>
        <!-- Container fluid ends -->
    </div>
}
<script type="text/javascript">
    $("#btnReset").click(function () {
        checkCheckbox();
    });
    $(document).ready(function () {
        $('#EARLY_GOING').addClass('form-control');
        $('#LATE_COMING').addClass('form-control');
        $('#EXHRS_BEFORE_SHIFT_HRS').addClass('form-control');
