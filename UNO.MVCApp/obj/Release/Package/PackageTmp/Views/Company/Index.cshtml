@model IEnumerable<UNO.AppModel.CompanyModel>
@{
    ViewBag.Title = "COMPANY MASTER";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section scripts
{
    <script>
        var createNewPage = '@Url.Action("Create", "Company")';
        $(document).ready(function () {

            if ('@ViewBag.ViewAccess' == "False") {
                $(".btn-success").hide();
            }
            if ('@ViewBag.EditAccess' == "False") {
                $(".btn-info").hide();
            }
            if ('@ViewBag.DeleteAccess' == "False") {
                $(".btn-danger").hide();
            }

            $("#lsttable").dataTable(
                            {
                                pageLength: 10,
                                "aoColumns": [
                                            null,
                                            null,
                                            null,
                                            null,
                                            null,
                                            { "bSortable": false }
                                ], "scrollX": true
                            });
        });

        $('#lsttable').dataTable({
            "sPaginationType": "full_numbers",
            dom: 'lBfrtip',
            "bInfo": false,
            oLanguage: {
                sLengthMenu: "Show: _MENU_",
            },
            "aoColumnDefs": [
             { "bSortable": false, "aTargets": [2] }
            ],
            buttons: [
                {
                    text: '<i class="fa fa-plus-circle"></i> Add New',
                    action: function myFunction() {
                        location.href = createNewPage;
                    },
                    attr: {
                        id: 'btnCreateNew'
                    }
                }
            ]

        });
    </script>
}

<!-- Container fluid Starts -->
<div class="container-fluid">
    <!-- Spacer Starts -->
    <div class="spacer clearfix">
        <div class="row">
            <div class="col-md-12">
                <div class="blog blog-default ">    
                    <div class="blog-header ">
                        <h4 class="blog-title pull-left mt5">Listing</h4>
                        <div class="dt-buttons pull-right">
                            <a class="btn btn-default" href="#"><span><i class="fa fa-print"></i> Print</span></a> <a class="btn btn-default" href="#"><span><i class="fa fa-file-excel-o"></i> Excel</span></a>
                        </div>
                        <span class="clearfix"></span>
                    </div>
                    <div class="blog-body">
                        <div class="table-responsive">
                            <div id="dt_example" class="table-responsive example_alt_pagination clearfix">
                                <table id="lsttable" class="table table-condensed table-striped table-hover table-bordered pull-left">
                                    <thead>
                                        <tr>
                                            <th class="text-center">Company Code</th>
                                            <th class="text-center">Company Name</th>  
                                            <th class="text-center">ACTIONS</th>
                                        </tr>
                                    </thead>
                                    <tbody id="data">
                                        @foreach (var item in Model)
                                        {
                                            @Html.HiddenFor(modelItem => item.COMPANY_ID)
                                            <tr>
                                                <td class="text-center">
                                                    @Html.DisplayFor(modelItem => item.COMPANY_CODE)
                                                </td>
                                                <td class="text-center">
                                                    @Html.DisplayFor(modelItem => item.COMPANY_NAME)
                                                </td>  
                                                <td class="text-center" width="20%">
                                                    @Html.ActionLink(" ", "View", new { id = item.COMPANY_ID }, new { title = "View", @class = "fa fa-eye btn btn-success btn-sm" })
                                                    @Html.ActionLink(" ", "Edit", new { id = item.COMPANY_ID }, new { title = "Edit", @class = "fa fa-edit btn btn-info" })&nbsp;
                                                    @Html.ActionLink(" ", "Delete", new { id = item.COMPANY_ID }, new { title = "Delete", @class = "fa fa-trash-o btn btn-danger" }) &nbsp;
                                                    @*@Html.ActionLink(" ", "AddLocation", new { id = item.COMPANY_ID }, new {title="Add Location", @class = "fa fa-user-plus btn btn-info" })&nbsp;*@
                                                    @*@Html.ActionLink(" ", "ViewLocations", new { id = item.COMPANY_ID }, new { title = "View Location", @class = "fa fa-map-marker btn btn-danger" })*@
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Spacer Ends -->
</div>
<!-- Container fluid ends -->
<script>
    $('#btnCreateNew').click(function () {
        debugger;
        document.location = '';
    });
</script>