@model IEnumerable<UNO.AppModel.EmployeeCardConfig>
@{
    ViewBag.Title = "Employee Card Configuration";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section scripts
{
    <script>
        var createNewPage = '@Url.Action("Create", "EmployeeCardConfig")';
        $(document).ready(function () {
            if ('@ViewBag.CreateAccess' == "False") {
                $(".btnCreateNew").hide();
            }
            if ('@ViewBag.ViewAccess' == "False") {
                $(".btn-success").hide();
            }
            if ('@ViewBag.EditAccess' == "False") {
                $(".btn-info").hide();
            }
            if ('@ViewBag.DeleteAccess' == "False") {
                $(".btn-danger").hide();
            }

            $("#lsttable").dataTable(
                            {
                                pageLength: 10,
                                "aoColumns": [
                                            null,
                                            null,
                                            null,
                                            null,
                                            null,
                                            null,
                                            null,
                                            null,
                                ], "scrollX": true
                            });
        });

        $('#lsttable').dataTable({
            "sPaginationType": "full_numbers",
            dom: 'lBfrtip',
            "bInfo": false,
            oLanguage: {
                sLengthMenu: "Show: _MENU_",
            },
            "aoColumnDefs": [
          { "bSortable": false, "aTargets": [8] }
            ],
            /* fnInitComplete : function( oSettings, json ){
                 $('#dataTables_length').detach().prependTo("#new-location");

       },*/
            buttons: [
                {
                    text: '<i class="fa fa-plus-circle"></i> Add New',
                    action: function myFunction() {
                        location.href = createNewPage;
                    },
                    attr: {
                        id: 'btnCreateNew'
                    }
                }

            ]

        });
    </script>
}

<!-- Container fluid Starts -->
<div class="container-fluid">
    <!-- Spacer Starts -->
    <div class="spacer clearfix">
        <div class="row">
            <div class="col-md-12">
                <div class="blog blog-default ">
                    @*<div class="blog-header ">
                                                        <h4 class="blog-title pull-left mt5">Listing</h4><div class="dt-buttons pull-right">
                            @Html.ActionLink(" Create New", "Create", "Menu", null, new { @id = "btnCreate", @class = "fa fa-plus-circle text-white btn btn-warning pull-right" })<a class="btn btn-default" href="#"><span><i class="fa fa-file-excel-o"></i> Excel</span></a></div>
                        </div>*@

                    <div class="blog-header ">
                        <h4 class="blog-title pull-left mt5">Listing</h4>
                        <div class="dt-buttons pull-right">
                            <a class="btn btn-default" href="#"><span><i class="fa fa-print"></i> Print</span></a> <a class="btn btn-default" href="#"><span><i class="fa fa-file-excel-o"></i> Excel</span></a>
                        </div>
                        <span class="clearfix"></span>
                    </div>
                    <div class="blog-body">
                        <div class="table-responsive">
                            <div id="dt_example" class="table-responsive example_alt_pagination clearfix">
                                <table id="lsttable" class="table table-condensed table-striped table-hover table-bordered pull-left">
                                    <thead>
                                        <tr>
                                            <th class="text-center">Employee Code</th>
                                            <th class="text-center">Card Code</th>
                                            <th class="text-center">Pin</th>
                                            <th class="text-center">Usecount</th>
                                            <th class="text-center">Ignore APB</th>
                                            <th class="text-center">Status</th>
                                            <th class="text-center">Activation Date</th>
                                            <th class="text-center">Expiry Date</th>
                                            <th class="text-center">ACTIONS</th>
                                        </tr>
                                    </thead>
                                    <tbody id="data">
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td class="text-center">
                                                    @Html.DisplayFor(modelItem => item.CC_EMP_ID)
                                                </td>
                                                <td class="text-center">
                                                    @Html.DisplayFor(modelItem => item.CARD_CODE)
                                                </td>
                                                <td class="text-center">
                                                    @Html.DisplayFor(modelItem => item.PIN)
                                                </td>
                                                <td class="text-center">
                                                    @Html.DisplayFor(modelItem => item.USE_COUNT)
                                                </td>
                                                <td class="text-center">
                                                    @item.IGNORE_APB
                                                </td>
                                                <td class="text-center">
                                                    @item.STATUS
                                                </td>
                                                <td class="text-center">
                                                    @Html.DisplayFor(modelItem => item.ACTIVATION_DATE)
                                                </td>
                                                <td class="text-center">
                                                    @Html.DisplayFor(modelItem => item.EXPIRY_DATE)
                                                </td>
                                                <td class="text-center" width="15%">
                                                    @Html.ActionLink(" ", "View", new { id = item.CC_EMP_ID }, new { @class = "fa fa-eye btn btn-success btn-sm" })
                                                    @*@Html.ActionLink(" ", "Delete", new { id = item.MENU_ID }, new { @class = "fa fa-eye btn btn-success btn-sm" })&nbsp;*@
                                                    @Html.ActionLink(" ", "Edit", new { id = item.CC_EMP_ID }, new { @class = "fa fa-edit btn btn-info" })&nbsp;
                                                    @Html.ActionLink(" ", "Delete", new { id = item.CC_EMP_ID }, new { @class = "fa fa-trash-o btn btn-danger" })
                                                </td>
                                            </tr>
                                        }

                                    </tbody>

                                </table>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Spacer Ends -->
</div>
