@model IEnumerable<UNO.AppModel.WeeklyOff>
@{
    ViewBag.Title = "Weekend / Weekly Off";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section scripts
{
    <script>
    var createNewPage = '@Url.Action("Create", "WeeklyOff")';
        $(document).ready(function () {
           if ('@ViewBag.CreateAccess' == "False") {
                $(".btnCreateNew").hide();
            }
            if ('@ViewBag.ViewAccess' == "False") {
                $(".btn-success").hide();
            }
            if ('@ViewBag.EditAccess' == "False") {
                $(".btn-info").hide();
            }
            if ('@ViewBag.DeleteAccess' == "False") {
                $(".btn-danger").hide();
            }
            $("#lsttable").dataTable(
           {
               pageLength: 10,
               "aoColumns": [
                           null,
                           null,
                           null,
                           null,
                           null,
                           { "bSortable": false }
               ], "scrollX": true
           });
        });
        $('#lsttable').dataTable({
            "sPaginationType": "full_numbers",
            dom: 'lBfrtip',
            "bInfo": false,
            oLanguage: {
                sLengthMenu: "Show: _MENU_",
            },
            buttons: [
                {
                    text: '<i class="fa fa-plus-circle"></i> Add New',
                    action: function myFunction() {
                        location.href = createNewPage;
                    },
                    attr: {
                        id: 'btnCreateNew'
                    }
                }
            ]
        });
    </script>
}
<!-- Container fluid Starts -->
<div class="container-fluid">
    <!-- Spacer Starts -->
    <div class="spacer clearfix">
        <div class="row">
            <div class="col-md-12">
                <div class="blog blog-default ">
                    <div class="blog-header ">
                        <h4 class="blog-title pull-left mt5">Listing</h4>
                        <div class="dt-buttons pull-right">
                            <a class="btn btn-default" href="#"><span><i class="fa fa-print"></i> Print</span></a> <a class="btn btn-default" href="#"><span><i class="fa fa-file-excel-o"></i> Excel</span></a>
                        </div>
                        <span class="clearfix"></span>
                    </div>
                    <div class="table-responsive">
                        <div id="dt_example" class="table-responsive example_alt_pagination clearfix">
                            <span class="clearfix"></span>
                            <hr />
                            <table id="lsttable" class="table table-condensed table-striped table-hover table-bordered pull-left">
                                <thead>
                                    <tr>
                                        <th class="text-center">ID</th>
                                        <th class="text-center">WEEK DAY</th>
                                        <th class="text-center">WEEKEND /WEEK OFF</th>
                                        <th class="text-center">COMPANY NAME</th>
                                        <th class="text-center">WEEK OFF CODE </th>
                                        <th class="text-center">WEEKEND /WEEK OFF PATTERN</th>
                                        <th class="text-center">ACTIONS</th>
                                    </tr>
                                </thead>
                                <tbody id="data">
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.MWK_CD)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.MWK_DAY_NAME)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.MWK_OFF_NAME)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.COMPANY_NAME)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.MWK_DESC)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.MWK_PAT)
                                            </td>
                                            <td class="text-center" width="15%"> 
                                                
                                                @Html.ActionLink(" ", "View", new { id = item.MWK_CD }, new { title = "View", @class = "fa fa-eye btn btn-success btn-sm" })&nbsp;
                                                @Html.ActionLink(" ", "Edit", new { id = item.MWK_CD }, new { title = "Edit", @class = "fa fa-edit btn btn-info" })&nbsp;
                                                @Html.ActionLink(" ", "DeleteView", new { id = item.MWK_CD }, new { title = "Delete", @class = "fa fa-trash-o btn btn-danger" })
                                                
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Spacer Ends -->
</div>
