@model IEnumerable<UNO.AppModel.ShiftPattern>

@{
    ViewBag.Title = "Index";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="main-container" style="clear:both;">
        <!-- Container fluid Starts -->
        <div class="container-fluid">
            <!-- Spacer Starts -->
            <div class="spacer clearfix">
                <div class="row">
                    <div class="col-md-12">
                        <div class="blog blog-default ">
                            <div class="blog-header ">
                                <h4 class="blog-title pull-left mt5">Listing</h4> <div class="dt-buttons pull-right"><a class="btn btn-default" href="#"><span><i class="fa fa-print"></i> Print</span></a> <a class="btn btn-default" href="#"><span><i class="fa fa-file-excel-o"></i> Excel</span></a></div>
                                <span class="clearfix"></span>
                            </div>
                            <div class="blog-body">
                                <div class="table-responsive">
                                    <!--<button class="btn btn-info" data-toggle="modal" data-target="#modalsm"><i class="fa fa-plus-circle"></i> Create New</button>-->
                                    <!-- Modal -->
                                    <div id="dt_example" class="table-responsive example_alt_pagination clearfix">
                                        <table class="table table-condensed table-striped table-hover table-bordered pull-left" id="lsttable">
                                            <thead>
                                                <tr>
                                                    <th>Sr</th>
                                                    <th>@Html.DisplayNameFor(model => model.SHIFT_PATTERN_CODE)</th>
                                                    <th>@Html.DisplayNameFor(model => model.SHIFT_PATTERN_DESCRIPTION)</th>
                                                    <th>@Html.DisplayNameFor(model => model.SHIFT_PATTERN_TYPE)</th>                                                   
                                                    <th>Action</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @{
    int i = 1;
                                                }
                                                @foreach (var item in Model)
                                                {
                                                    <tr>
                                                        <td>@i</td>
                                                        <td>@Html.DisplayFor(modelItem => item.SHIFT_PATTERN_CODE)</td>
                                                        <td>@Html.DisplayFor(modelItem => item.SHIFT_PATTERN_DESCRIPTION)</td>
                                                        <td>@Html.DisplayFor(modelItem => item.SHIFT_PATTERN_TYPE)</td>                                                       
                                                        <td>
                                                            <a class="btn btn-success" href="@Url.Action("Details", new { id = item.SHIFT_PATTERN_ID })" title="Edit">
                                                                <i class="fa fa-eye"></i>
                                                            </a>
                                                            <a class="btn btn-info" href="@Url.Action("Edit", new { id = item.SHIFT_PATTERN_ID })" title="Edit">
                                                                <i class="fa fa-edit"></i>
                                                            </a>
                                                            <a class="btn btn-danger" href="@Url.Action("Delete", new { id = item.SHIFT_PATTERN_ID })" title="Delete">
                                                                <i class="fa fa-trash-o"></i>
                                                            </a>
                                                        </td>
                                                    </tr>
                                                    i++;
                                                }
                                            </tbody>
                                        </table>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Spacer Ends -->
    </div>
}


<script type="text/javascript">
    var createNewPage = '@Url.Action("Create", "ShiftPattern")';
    $(document).ready(function () {

        // $('#data-table').DataTable();

        if ('@ViewBag.CreateAccess' == "False") {
            $(".btnCreateNew").hide();
        }
        if ('@ViewBag.ViewAccess' == "False") {
            $(".btn-success").hide();
        }
        if ('@ViewBag.EditAccess' == "False") {
            $(".btn-info").hide();
        }
        if ('@ViewBag.DeleteAccess' == "False") {
            $(".btn-danger").hide();
        }

        $('#lsttable').dataTable({
            "sPaginationType": "full_numbers",
            dom: 'lBfrtip',
            "bInfo": true,
            oLanguage: {
                sLengthMenu: "Show: _MENU_",
            },
            columns: [
                null,
                null,
                null,               
                null,
                {
                    "searchable": false,
                    "orderable": false
                }
            ],
            buttons: [
                {
                    text: '<i class="fa fa-plus-circle"></i> Add New',
                    action: function myFunction() {
                        location.href = createNewPage;
                    },
                    attr: {
                        id: 'btnCreateNew'
                    }
                }
        ]

    });

    });

</script>
