                                        </div>
                                        <div class="col-sm-4">
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <div class="col-sm-8">
                                            @Html.LabelFor(model => model.LR_CATEGORYID, null, "")
                                            @Html.DropDownListFor(model => model.LR_CATEGORYID, (IEnumerable<SelectListItem>)ViewBag.Categories, "Select Category", new { @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.LR_CATEGORYID, null, new { @class = "validation-redcolor" })
                                        </div>
                                        <div class="col-sm-4">
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <div class="col-sm-8">
                                            @Html.LabelFor(model => model.LeaveID, null, "")
                                            @Html.DropDownListFor(model => model.LeaveID, (IEnumerable<SelectListItem>)ViewBag.LeaveCode, "Select Leave Code", new { @class = "form-control" })
