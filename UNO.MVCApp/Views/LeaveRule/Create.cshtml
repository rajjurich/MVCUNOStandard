@model UNO.AppModel.LeaveRuleModel
@{
    ViewBag.Title = "Leave Rule";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section scripts
{
    <script src="~/Scripts/JS/jquery.datetimepicker.full.js"></script>
    <script>
        $(document).ready(function () {
            // 'use strict';

            //jQuery('#VISITOR_ALLOWED_TO_TIME, #VISITOR_ALLOWED_FROM_TIME').datetimepicker({
            //    format: 'd/m/Y  g:i A',
            //    formatTime: 'g:i A',
            //    mask: '9999/19/39 29:59 --'
            //});
            jQuery('#EL_LEFT_DATE').datetimepicker({
                //format: 'd/m/Y',
                timepicker: false
                //value: new Date()
            });
        });
    </script>
    <script>
    $(document).ready(function () {
        new confirmexitmsg('form');
        $("#btnReset").click(function (e) {
            formmodified = 0;
            location.reload(true);
        });

        $("#COMPANY_ID").change(function () {

            var CompanyID = $(this).val();
            var markup = "";

            if (CompanyID == '') {
                markup = "<option value=''>Select Leave Code</option>";
                $("#LeaveID").html(markup).show();
            }
            else {
                $.ajax({
                    url: '@Url.Action("LeaveCodeBycompID", "LeaveRule")',
                    data: { id: CompanyID },
                    cache: false,
                    type: "POST",
                    success: function (data) {
                        debugger;
                        markup = "<option value=''>Select Leave Code</option>";
                        for (var x = 0; x < data.length; x++) {
                            markup += "<option value=" + data[x].Value + ">" + data[x].Text + "</option>";
                        }
                        $("#LeaveID").html(markup).show();
                        $("#LeaveID").val('');
                    },
                    error: function (reponse) {
                        //if (box) box.remove();
                    }
                });
            }
        });
    });
</script>
    <script type="text/javascript">
        $(document).ready(function () {
            $("#Country").change(function () {
                var LR_AllotmentType = $(this).val();
                if (LR_AllotmentType == 'Y') {
                    $('.Add1').show();
            }
            else {
                    $('.Add1').hide();
            }
        });
        });

        jQuery(document).ready(function () {

            $('input:radio[name="LR_DAYS"]').change(function () {
                if ($(this).val() == 'R') {
                    $('.LEAVERULE').show();
                }
                else {
                    $('.LEAVERULE').hide();
                }
            });
        });

        $(document).ready(function () {
            $("#LEAVERULE").change(function () {
                var LEAVERULE = $(this).val();
                if (LEAVERULE == 'O') {
                    $('.LRGreaterOrLesser').show();
                }
                else {
                    $('.LRGreaterOrLesser').hide();
                }
            });
        });
    </script>
}
@Styles.Render("~/Content/css/jquery.datetimepicker.css")

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <!-- Container fluid Starts -->
