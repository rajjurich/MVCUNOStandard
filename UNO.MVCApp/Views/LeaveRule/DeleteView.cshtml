@model UNO.AppModel.LeaveRuleModel
@{
    ViewBag.Title = "Leave Rule";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section scripts
{
    <script src="~/Scripts/JS/jquery.datetimepicker.full.js"></script>
    <script>
        $(document).ready(function () {
            new confirmexitmsg('form');
            $("#btnReset").click(function (e) {
                formmodified = 0;
                location.reload(true);
            });
            $("#COMPANY_ID").change(function () {
                var CompanyID = $(this).val();
                var markup = "";
                if (CompanyID == '') {
                    markup = "<option value=''>Select Leave Code</option>";
                    $("#LeaveID").html(markup).show();
                }
                else {
                    $.ajax({
                        url: '@Url.Action("LeaveCodeBycompID", "LeaveRule")',
                        data: { id: CompanyID },
                        cache: false,
                        type: "POST",
                        success: function (data) {
                            debugger;
                            markup = "<option value=''>Select Leave Code</option>";
                            for (var x = 0; x < data.length; x++) {
                                markup += "<option value=" + data[x].Value + ">" + data[x].Text + "</option>";
                            }
                            $("#LeaveID").html(markup).show();
                            $("#LeaveID").val('');
                        },
                        error: function (reponse) {
                            //if (box) box.remove();
                        }
                    });
                }
            });
        });
    </script>
}
