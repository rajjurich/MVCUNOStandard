@model IEnumerable<UNO.AppModel.VisitorAppointmentRequestModel>
@{
    ViewBag.Title = "Visitor Appointment Request";
}
@section scripts
{
    <script>
        var createNewPage = '@Url.Action("Create", "VisitorAppointmentRequest")';
        $(document).ready(function () {
            if ('@ViewBag.ViewAccess' == "False") {
                $(".btn-success").hide();
            }
            if ('@ViewBag.EditAccess' == "False") {
                $(".btn-info").hide();
            }
            if ('@ViewBag.DeleteAccess' == "False") {
                $(".btn-danger").hide();
            }
            $("#lsttable").dataTable(
                            {
                                pageLength: 10,
                                "aoColumns": [
                                            null,
                                            null,
                                            null,
                                            null,
                                            null,
                                            { "bSortable": false }
                                ], "scrollX": true
                            });
        });

        $('#lsttable').dataTable({
            "sPaginationType": "full_numbers",
            dom: 'lBfrtip',
            "bInfo": false,
            oLanguage: {
                sLengthMenu: "Show: _MENU_",
            },
            "aoColumnDefs": [
         { "bSortable": false, "aTargets": [9] }
            ],
            buttons: [
                {
                    text: '<i class="fa fa-plus-circle"></i> Add New',
                    action: function myFunction() {
                        location.href = createNewPage;
                    },
                    attr: {
                        id: 'btnCreateNew'
                    }
                }
            ]
        });
</script>
}
<!-- Container fluid Starts -->
<div class="container-fluid">
    <!-- Spacer Starts -->
    <div class="spacer clearfix">
        <div class="row">
            <div class="col-md-12">
                <div class="blog blog-default ">
                    <div class="blog-header ">
                        <h4 class="blog-title pull-left mt5">Listing</h4>
                        <div class="dt-buttons pull-right">
                            <a class="btn btn-default" href="#"><span><i class="fa fa-print"></i> Print</span></a> <a class="btn btn-default" href="#"><span><i class="fa fa-file-excel-o"></i> Excel</span></a>
                        </div>
                        <span class="clearfix"></span>
                    </div>
                    <div class="blog-body">
                        <div class="table-responsive">
                            <div id="dt_example" class="table-responsive example_alt_pagination clearfix">
                                <table id="lsttable" class="table table-condensed table-striped table-hover table-bordered pull-left">
                                    <thead>
                                        <tr>
                                            <th class="text-center">Visitor Name</th>
                                            <th class="text-center">Visitor Company</th>
                                            <th class="text-center">Nature Of Work</th>
                                            <th class="text-center">Mobile Number</th>
                                            <th class="text-center">Appointment From Date</th>
                                            <th class="text-center">Appointment To Date</th>
                                            <th class="text-center">Visitor Allowed From Time</th>
                                            <th class="text-center">Visitor Allowed To Time</th>
                                            <th class="text-center">Approval Status</th>
                                            <th class="text-center">ACTIONS</th>
                                        </tr>
                                    </thead>
                                    <tbody id="data">
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td class="text-center">
                                                    @Html.DisplayFor(modelItem => item.VISITOR_NAME)
                                                </td>
                                                <td class="text-center">
                                                    @Html.DisplayFor(modelItem => item.VISITORCOMPANY)
                                                </td>
                                                <td class="text-center">
                                                    @Html.DisplayFor(modelItem => item.NATURE_OF_WORK)
                                                </td>
                                                <td class="text-center">
                                                    @Html.DisplayFor(modelItem => item.MOBILENO)
                                                </td>
                                                <td class="text-center">
                                                    @Html.DisplayFor(modelItem => item.APPOINTMENT_FROM_DATE)
                                                </td>
                                                <td class="text-center">
                                                    @Html.DisplayFor(modelItem => item.APPOINTMENT_TO_DATE)
                                                </td>
                                                <td class="text-center">
                                                    @Html.DisplayFor(modelItem => item.VISITOR_ALLOWED_FROM_TIME)
                                                </td>
                                                <td class="text-center">
                                                    @Html.DisplayFor(modelItem => item.VISITOR_ALLOWED_TO_TIME)
                                                </td>
                                                <td class="text-center">
                                                    @Html.DisplayFor(modelItem => item.APPROVAL_STATUS)
                                                </td>
                                                <td class="text-center" width="15%">
                                                    @*@Html.ActionLink(" Edit", "Edit", new { id = item.REQUEST_ID }, new { title = "Edit", @class = "fa fa-edit btn btn-info" })&nbsp;
                                                     @Html.ActionLink(" Delete", "DeleteView", new { id = item.REQUEST_ID }, new { @class = "fa fa-trash-o btn btn-danger" })*@
                                                    @Html.ActionLink(" ", "Edit", new { id = item.REQUEST_ID }, new { title = "Edit", @class = "fa fa-edit btn btn-info" })&nbsp;
                                                    @Html.ActionLink(" ", "DeleteView", new { id = item.REQUEST_ID }, new { title = "Delete", @class = "fa fa-trash-o btn btn-danger" })
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                     </div>
                 </div>
             </div>
        </div>
    </div>
    <!-- Spacer Ends -->
</div>
