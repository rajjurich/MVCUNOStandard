@model UNO.AppModel.CompanyModel
@{
    ViewBag.Title = "Company";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <div class="container-fluid">
        <div class="spacer clearfix">
            <div class="col-md-7 col-centered">
                <div class="blog blog-default ">
                    <div class="blog-header ">
                        <h5 class="blog-title pull-left mt5"><i class="fa fa-pencil-square-o"></i> View </h5><span class="pull-right"><a class="btn btn-default" href='@Url.Action("Index")' data-original-title="" title=""><i class="fa fa-arrow-left"></i> Back </a> </span>
                        <span class="clearfix"></span>
                    </div>
                    <div class="blog-body">
                        <form class="form-horizontal repeater" role="form" id="users">

                            <div class="row">
                                <div class="col-md-12">
                                    <fieldset>
                                        <legend>Company</legend>
                                        <div class="form-group row">
                                            <div class="col-sm-6">
                                                @Html.LabelFor(model => model.COMPANY_CODE, null, new { @class = "control-label" })
                                                @Html.TextBoxFor(model => model.COMPANY_CODE, new { @class = "form-control", @maxlength = "50", disabled = "disabled" })
                                                @Html.ValidationMessageFor(model => model.COMPANY_CODE, null, new { @class = "validation-redcolor" })
                                            </div>
                                            <div class="col-sm-6">
                                                @Html.LabelFor(model => model.COMPANY_NAME, null, new { @class = "control-label" })
                                                @Html.TextBoxFor(model => model.COMPANY_NAME, new { @class = "form-control", @maxlength = "50", disabled = "disabled" })
                                                @Html.ValidationMessageFor(model => model.COMPANY_NAME, null, new { @class = "validation-redcolor" })
                                            </div>
                                        </div>
                                    </fieldset>
                                </div>
                                @for (var i = 0; i < 1; i++)
                                {
                                    @Html.HiddenFor(model => Model.CompanyLocationList[i].ADDRESS_TYPE_ID)
                                    @Html.HiddenFor(model => Model.CompanyLocationList[i].COMPANY_ADDRESS_ID)
                                    @Html.HiddenFor(model => Model.CompanyLocationList[i].COMPANY_ID)
                                    @Html.HiddenFor(model => Model.CompanyLocationList[i].COMPANY_STATE)
                                    <div class="col-md-12">
                                        <fieldset>
                                            <legend>Head Office </legend>
                                            <div class="form-group row">
                                                <div class="col-sm-12">
                                                    @Html.LabelFor(model => Model.CompanyLocationList[i].COMPANY_ADDRESS, null, new { @class = "control-label" })
                                                    @Html.TextAreaFor(model => Model.CompanyLocationList[i].COMPANY_ADDRESS, new { @class = "form-control", @maxlength = "500", disabled = "disabled" })
                                                    @Html.ValidationMessageFor(model => Model.CompanyLocationList[i].COMPANY_ADDRESS, null, new { @class = "validation-redcolor" })
                                                </div>
                                                </div>
                                            <div class="form-group row">
                                                <div class="col-sm-4">
                                                    @Html.LabelFor(model => Model.CompanyLocationList[i].COMPANY_PIN, null, new { @class = "control-label" })
                                                    @Html.TextBoxFor(model => Model.CompanyLocationList[i].COMPANY_PIN, new { @class = "form-control", @maxlength = "50", disabled = "disabled" })
                                                    @Html.ValidationMessageFor(model => Model.CompanyLocationList[i].COMPANY_PIN, null, new { @class = "validation-redcolor" })
                                                </div>
                                                <div class="col-sm-4">
                                                    @Html.LabelFor(model => Model.CompanyLocationList[i].COMPANY_CITY, null, new { @class = "control-label" })
                                                    @Html.TextBoxFor(model => Model.CompanyLocationList[i].COMPANY_CITY, new { @class = "form-control", @maxlength = "50", disabled = "disabled" })
                                                    @Html.ValidationMessageFor(model => Model.CompanyLocationList[i].COMPANY_CITY, null, new { @class = "validation-redcolor" })
                                                </div>
                                                <div class="col-sm-4">
                                                    @Html.LabelFor(model => Model.CompanyLocationList[i].STATE_CODE, null, new { @class = "control-label" })
                                                    @Html.DropDownListFor(model => Model.CompanyLocationList[i].STATE_CODE, (IEnumerable<SelectListItem>)ViewBag.State, "Select State", new { @class = "form-control", disabled = "disabled" })
                                                    @Html.ValidationMessageFor(model => Model.CompanyLocationList[i].STATE_CODE, null, new { @class = "validation-redcolor" })
                                                </div>
                                                </div>
                                            <div class="form-group row">
                                                <div class="col-sm-4">
                                                    @Html.LabelFor(model => Model.CompanyLocationList[i].COMPANY_PHONE1, null, new { @class = "control-label" })
                                                    @Html.TextBoxFor(model => Model.CompanyLocationList[i].COMPANY_PHONE1, new { @class = "form-control", @maxlength = "50", disabled = "disabled" })
                                                    @Html.ValidationMessageFor(model => Model.CompanyLocationList[i].COMPANY_PHONE1, null, new { @class = "validation-redcolor" })
                                                </div>
                                                <div class="col-sm-4">
                                                    @Html.LabelFor(model => Model.CompanyLocationList[i].COMPANY_PHONE2, null, new { @class = "control-label" })
                                                    @Html.TextBoxFor(model => Model.CompanyLocationList[i].COMPANY_PHONE2, new { @class = "form-control", @maxlength = "50", disabled = "disabled" })
                                                    @Html.ValidationMessageFor(model => Model.CompanyLocationList[i].COMPANY_PHONE2, null, new { @class = "validation-redcolor" })
                                                </div>
                                            </div>
                                        </fieldset>
                                    </div>
                                }
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
