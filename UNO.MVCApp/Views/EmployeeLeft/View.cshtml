@model UNO.AppModel.EmployeeLeftModel
@section scripts
{
    <script src="~/Scripts/JS/jquery.datetimepicker.full.js"></script>
    <script>

        $(document).ready(function () {
            jQuery('#EL_LEFT_DATE').datetimepicker({
                timepicker: false
            });

        });
    </script>
    <script>
        $(document).ready(function () {
            new confirmexitmsg('form');
            $("#btnReset").click(function (e) {
                formmodified = 0;
                location.reload(true);
            });
        });

    </script>
}
@Styles.Render("~/Content/css/jquery.datetimepicker.css")

<div class="container-fluid">
    <div class="spacer clearfix">
        <div class="col-md-7 col-centered">
            <div class="blog blog-default ">
                <div class="blog-header ">
                    <h4 class="blog-title pull-left mt5">View </h4>
                    <span class="pull-right"><a class="btn btn-default" href='@Url.Action("index/" + Model.EL_COLUMNID)'><i class="fa fa-arrow-left"></i> Back To List</a></span>
                    <span class="clearfix"></span>
                </div>
                <div class="blog-body form p0">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true)
                        <div class="form-horizontal form-bordered form-label-stripped">
                            <div class="form-body p0">
                                <div class="form-group" style="display: none;">
                                    @Html.LabelFor(model => model.EL_COLUMNID, null, new { style = "display: none;", @maxlength = "15" })
                                    <div class="col-md-9">
                                        @Html.TextBoxFor(model => model.EL_COLUMNID, new { style = "display: none;", @maxlength = "15" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(model => model.EL_EMP_ID, null, new { @class = "control-label col-md-3" })
                                    <div class="col-md-9">
                                        @Html.DropDownListFor(model => model.EL_EMP_ID, (IEnumerable<SelectListItem>)ViewBag.EmployeeId, "Select Employee", new { @class = "form-control", @disabled = "disabled" })
                                        @Html.ValidationMessageFor(model => model.EL_EMP_ID, null, new { @class = "text-danger field-validation-error" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(model => model.EL_LEFT_DATE, null, new { @class = "control-label col-md-3" })
                                    <div class="col-md-9">
                                        @Html.TextBoxFor(model => model.EL_LEFT_DATE, new { @disabled = "disabled", @class = "form-control", placeholder = "Enter Drop-off date here..." })
                                    </div>
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(model => model.EL_REASONID, null, new { @class = "control-label col-md-3" })
                                    <div class="col-md-9">
                                        @Html.DropDownListFor(model => model.EL_REASONID, (IEnumerable<SelectListItem>)ViewBag.ReasonId, "Select Reason", new { @class = "form-control", @disabled = "disabled" })
                                        @Html.ValidationMessageFor(model => model.EL_REASONID, null, new { @class = "text-danger field-validation-error" })
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>