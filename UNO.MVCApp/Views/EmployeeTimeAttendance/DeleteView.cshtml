@model UNO.AppModel.EmployeeTimeAttendanceCreateModel
@{
    ViewBag.Title = "DeleteView";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section scripts
{

    <script>
        $(document).ready(function () {
            $("#btnReset").click(function (e) {
                formmodified = 0;
                location.reload(true);
            });








        });
    </script>

}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)


    <div class="container-fluid">
        <!-- Spacer Starts -->
        <div class="spacer clearfix">
            <div class="col-md-7 col-centered">
                <div class="blog blog-default ">
                    <div class="blog-header ">
                        <h4 class="blog-title pull-left mt5">Delete </h4>
                        <span class="pull-right"><a class="btn btn-default" href='@Url.Action("index")'><i class="fa fa-arrow-left"></i> Back To List</a></span>
                        <span class="clearfix"></span>
                    </div>

                    <div class="blog-body form p0">

                        <div class="form-horizontal form-bordered form-label-stripped">

                            <div class="form-group">
                                
                                @Html.HiddenFor(m => m.ETC_EMP_ID)
                            </div>


                            <div class="form-group">
                                Minimum Swipe
                                @Html.TextBoxFor(m => m.ETC_MINIMUM_SWIPE, new { @class = "form-control" })
                            </div>


                            <div class="form-group">
                                Week Off
                                @Html.DropDownListFor(model => model.ETC_WEEKOFF, (IEnumerable<SelectListItem>)ViewBag.weekoffattandance2, "Select Week OFF", new { @class = "form-control",@disabled="disabled"})
                            </div>


                            <div class="form-group">
                                Week End
                                @Html.DropDownListFor(model => model.ETC_WEEKEND, (IEnumerable<SelectListItem>)ViewBag.weekendattandance2, "Select Week End", new { @class = "form-control", @disabled = "disabled" })
                            </div>

                            <div class="form-group">
                                Shift Code
                                @Html.DropDownListFor(model => model.ETC_SHIFTCODE, (IEnumerable<SelectListItem>)ViewBag.shiftpattern2, "Select Shift Pattern", new { @class = "form-control", @disabled = "disabled" })

                            </div>

                            <div class="form-actions">
                                <div class="row  mt5">
                                    <div class="col-md-12 text-center">
                                        <button type="submit" class="btn btn-sm btn-success" id="btnDelete"><i class="fa fa-save"></i>&nbsp;&nbsp;Delete</button>

                                    </div>
                                </div>
                            </div>






                        </div>
                    </div>



                </div>
            </div>
        </div>
    </div>



}

